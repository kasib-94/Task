@model List<Reservation>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Index" asp-controller="Book" class="btn btn-primary">Back to Book List  </a>
        </div>
    </div>
</div>

<br><br>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
    <tr>
        <th>
            Reservation Date
        </th>
        <th>
            Book Id
        </th>
        <th>
            User
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model)
    {
        <tr>
            <td width="50%">@obj.ReservationDate.ToString("g")</td>

            <td width="30%">@obj.BookId</td>
            <td class="">
               @obj.ApplicationUser.Email
            </td>
        </tr>
    }
    </tbody>
</table>